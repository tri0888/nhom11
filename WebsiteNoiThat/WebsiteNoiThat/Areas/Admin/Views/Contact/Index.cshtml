@model IEnumerable<Models.EF.Contact>
@{
    ViewBag.Title = "Quản lý liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Quản lý liên hệ</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách liên hệ</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Delete", "Contact", FormMethod.Post))
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover datatable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã liên hệ</th>
                                <th>Nội dung</th>
                                <th>Người gửi</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactId</td>
                                    <td>@item.Content</td>
                                    <td>@item.EmailCC</td>
                                    <td class="text-center">
                                        <span class="badge @(item.Status == true ? "badge-success" : "badge-warning")">
                                            @(item.Status == true ? "Đã xử lý" : "Chưa xử lý")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" 
                                                    onclick="handleContact(@item.ContactId)"
                                                    title="Xử lý"
                                                    @(item.Status.GetValueOrDefault() ? "disabled" : "")>
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </div>
                                        <a href="@Url.Action("Delete", "Contact")" 
                                           class="btn btn-danger btn-sm btn-delete" 
                                           data-id="@item.ContactId"
                                           title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>                                    
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            }
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
@Html.Partial("_DeleteModal")

@section Scripts {
    <script src="~/Areas/Scripts/datatables-config.js"></script>
    <script src="~/Scripts/deleteModal.js"></script>
    <script>
        function handleContact(id) {
            Swal.fire({
                title: 'Xác nhận xử lý?',
                text: "Bạn có chắc chắn muốn xử lý liên hệ này?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("UpdateStatus", "Contact")',
                        type: 'POST',
                        data: { id: id },
                        success: function(response) {
                            if(response.success) {
                                Swal.fire(
                                    'Thành công!',
                                    response.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Lỗi!',
                                    response.message,
                                    'error'
                                );
                            }
                        },
                        error: function() {
                            Swal.fire(
                                'Lỗi!',
                                'Đã xảy ra lỗi khi xử lý yêu cầu',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}






