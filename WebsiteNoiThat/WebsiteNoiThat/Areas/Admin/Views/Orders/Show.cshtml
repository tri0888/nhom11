@using WebsiteNoiThat.Areas.Admin.Models
@model IEnumerable<OrderView>
@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Quản lý đơn hàng</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover datatable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên người nhận</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Ngày cập nhật</th>
                            <th>Địa chỉ</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.ShipName</td>
                                <td>@item.ShipPhone</td>
                                <td>@item.ShipEmail</td>
                                <td>@item.UpdateDate</td>
                                <td>@item.ShipAddress</td>
                                <td>@item.StatusName</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Orders", new { id = item.OrderId })" 
                                           class="btn btn-primary btn-sm" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Orders", new { id = item.OrderId })" 
                                           class="btn btn-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Orders")" 
                                           class="btn btn-danger btn-sm btn-delete" 
                                           data-id="@item.OrderId"
                                           title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
@Html.Partial("_DeleteModal")

@section Scripts {
    <script src="~/Scripts/deleteModal.js"></script>
    <script src="~/Areas/Scripts/datatables-config.js"></script>
}