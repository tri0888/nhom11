@model IEnumerable<Models.EF.Category>
@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Quản lý loại sản phẩm</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách loại sản phẩm</h6>
            <a href="@Url.Action("Add", "ProductCate")" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Thêm loại sản phẩm
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover datatable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã loại SP</th>
                            <th>Tên loại SP</th>
                            <th>Diễn giải</th>
                            <th>Mã loại cha</th>
                            <th class="text-center" style="width: 120px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.Name</td>
                                <td>@item.MetaTitle</td>
                                <td>@(item.ParId)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", "ProductCate", new { CategoryId = item.CategoryId })" 
                                           class="btn btn-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "ProductCate")" 
                                           class="btn btn-danger btn-sm btn-delete" 
                                           data-id="@item.CategoryId"
                                           title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
@Html.Partial("_DeleteModal")

@section Scripts {
    <script src="~/Scripts/deleteModal.js"></script>
    <script src="~/Areas/Scripts/datatables-config.js"></script>
}


