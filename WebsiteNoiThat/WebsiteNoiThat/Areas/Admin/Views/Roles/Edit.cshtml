@model Models.EF.Role

@{
    ViewBag.Title = "Sửa chức năng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Sửa chức năng</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin chức năng</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }
                @Html.HiddenFor(model => model.RoleId)

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>Mã chức năng</th>
                            <td>
                                <input type="text" value="@Model.RoleId" class="form-control" disabled />
                            </td>
                        </tr>
                        <tr>
                            <th>Tên chức năng</th>
                            <td>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="text-right mt-3">
                    <a href="@Url.Action("Index", "Roles")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

