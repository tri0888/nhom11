@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<WebsiteNoiThat.Models.HistoryCart>

@{
    ViewBag.Title = "Lịch sử giao dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent p-0 mb-4">
            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item active">Lịch sử giao dịch</li>
        </ol>
    </nav>

    @if (Model.Count > 0)
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-primary">
                <h5 class="text-white mb-0">
                    <i class="fas fa-history me-2"></i>Lịch sử giao dịch
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Mã SP</th>
                                <th>Tên sản phẩm</th>
                                <th class="text-center">Hình ảnh</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-center">Khuyến mãi</th>
                                <th class="text-end">Thành tiền</th>
                                <th class="text-center">Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">@item.ProductId</td>
                                    <td class="align-middle fw-medium">@item.Name</td>
                                    <td class="text-center">
                                        <img src="@Url.Content("~/image/" + item.Photo)" 
                                             class="rounded shadow-sm" 
                                             width="80" />
                                    </td>
                                    <td class="align-middle text-center fw-medium">@item.Quantity</td>
                                    <td class="align-middle text-end">@item.Price.GetValueOrDefault(0).ToString("N0")₫</td>
                                    <td class="align-middle text-center">
                                        @if(item.Discount > 0)
                                        {
                                            <span class="badge bg-danger">-@item.Discount%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="align-middle text-end fw-bold text-primary">
                                        @string.Format("{0:#,###.##}", (item.TotalPrice))₫
                                    </td>
                                    <td class="align-middle text-center">
                                        @{
                                            var statusClass = item.NameStatus.ToLower() switch
                                            {
                                                "đã tiếp nhận" => "primary",
                                                "đã hủy" => "danger", 
                                                "đã giao" => "success",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@item.NameStatus</span>
                                    </td>
                                    <td class="align-middle text-end">
                                        @if (item.NameStatus.ToLower() == "đã tiếp nhận")
                                        {
                                            <button onclick="confirmCancel(@item.OrderDetaiId)" 
                                                    class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-times"></i> Hủy đơn
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-history fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Chưa có lịch sử giao dịch</h4>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-shopping-bag me-2"></i>Mua sắm ngay
            </a>
        </div>
    }
</div>

<style>
    .table > :not(caption) > * > * {
        padding: 1rem;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }
    
    .btn-outline-danger {
        border-radius: 20px;
        padding: 0.4rem 1rem;
    }
    
    .btn-outline-danger:hover {
        transform: translateY(-1px);
    }
    
    .card {
        border-radius: 10px;
        overflow: hidden;
    }
    
    .card-header {
        padding: 1rem 1.5rem;
        background: linear-gradient(45deg, #4e73df, #2e59d9);
    }
    
    .breadcrumb-item a {
        color: #4e73df;
        text-decoration: none;
    }
    
    .breadcrumb-item.active {
        color: #858796;
    }
</style>

@section Scripts {
    <script>
        function confirmCancel(orderId) {
            Swal.fire({
                title: 'Xác nhận hủy đơn',
                text: 'Bạn có chắc chắn muốn hủy đơn hàng này?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Xác nhận hủy',
                cancelButtonText: 'Đóng',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Cart/DeleteItem?id=${orderId}`;
                }
            });
        }
    </script>
}
