@model WebsiteNoiThat.Models.EmailModel
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="contact-info mb-4">
                <h4 class="text-primary mb-3">Studio Thời Trang Cao Cấp</h4>
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-map-marker-alt text-primary mr-3"></i>
                    <div>Ngõ 34 - Phú Kiều - Kiều Mai</div>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-phone text-primary mr-3"></i>
                    <div>01649.629.629</div>
                </div>
            </div>

            <h4 class="text-primary mb-4">Gửi tin nhắn cho chúng tôi</h4>
            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <strong>Có lỗi xảy ra:</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                foreach (var error in modelState.Errors)
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                    
                }
                else if(ViewBag.Status != null)
                {
                        <div class="alert alert-success mt-3 fade show">
                            <i class="fas fa-check-circle mr-2"></i>@ViewBag.Status
                        </div>
                    
                }

                <div class="form-group">
                    <label><i class="fas fa-envelope mr-2"></i>Email của bạn</label>
                    @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email của bạn" } })
                    @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label><i class="fas fa-heading mr-2"></i>Tiêu đề</label>
                    @Html.EditorFor(model => model.EmailSubject, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tiêu đề" } })
                    @Html.ValidationMessageFor(model => model.EmailSubject, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label><i class="fas fa-comment mr-2"></i>Nội dung</label>
                    @Html.TextAreaFor(model => model.EMailBody, new { @class = "form-control", rows = "5", placeholder = "Nhập nội dung tin nhắn" })
                    @Html.ValidationMessageFor(model => model.EMailBody, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label><i class="fas fa-copy mr-2"></i>CC (không bắt buộc)</label>
                    @Html.EditorFor(model => model.EmailCC, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email CC" } })
                    @Html.ValidationMessageFor(model => model.EmailCC, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    <label><i class="fas fa-user-secret mr-2"></i>BCC (không bắt buộc)</label>
                    @Html.EditorFor(model => model.EmailBCC, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email BCC" } })
                    @Html.ValidationMessageFor(model => model.EmailBCC, "", new { @class = "text-danger small" })
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane mr-2"></i>Gửi tin nhắn
                </button>                
            }
        </div>
    </div>

</div>

<style>
    .card {
        border-radius: 10px;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .contact-info i {
        font-size: 20px;
        width: 30px;
    }
    
    .form-control:focus {
        border-color: #bac8f3;
        box-shadow: 0 0 0 0.2rem rgba(78,115,223,.25);
    }
    
    .btn-primary {
        padding: 10px 25px;
    }
    
    .breadcrumb {
        border-radius: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        margin-bottom: 0.5rem;
        color: #212529;
    }

    .alert {
        border-radius: 8px;
        padding: 15px;
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
    }

    .alert-success {
        border-left: 4px solid #28a745;
    }

    .fade {
        opacity: 0;
        transition: opacity 0.15s linear;
    }

    .fade.show {
        opacity: 1;
    }
</style>