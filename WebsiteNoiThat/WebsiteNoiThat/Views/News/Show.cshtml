@model Models.EF.News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Shop Detail Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-12">
            <div class="mb-4">
                <h1 class="section-title px-5">
                    <span class="px-2">@Model.Title</span>
                </h1>
                <div class="text-muted text-center mb-4">
                    <i class="far fa-calendar-alt mr-2"></i>@Model.DateUpdate.Value.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <div class="text-center mb-4">
                <img class="img-fluid" src="@Url.Content("~/image/" + Model.Photo)" alt="@Model.Title" style="max-width: 800px;">
            </div>

            <div class="px-5">
                <div class="news-content">
                    @Html.Raw(Model.Detail)
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->
