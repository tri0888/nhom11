@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<Models.ProductView>

                                                                                                
<div class="text-center mb-4">
    <h2 class="section-title px-5"><span class="px-2">SẢN PHẨM HOT</span></h2>
</div>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4" onclick="window.location='@Url.Action("DetailProduct", new { @Id = product.ProductId })'" style="cursor: pointer;">
                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                    <img class="img-fluid w-100" src="@Url.Content("~/image/" + product.Photo)" alt="@product.Name" style="height: 280px; object-fit: cover;">
                    
                    <img src="~/image/hot.png" class="position-absolute" style="top: 10px; left: 10px; width: 50px;">
                </div>
                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                    <h6 class="text-truncate mb-3 px-3">@product.Name</h6>
                    <div class="d-flex justify-content-center">
                        @if (product.Discount > 0)
                        {
                            <h6 class="text-muted ml-2"><del>@product.Price.GetValueOrDefault(0).ToString("N0")₫</del></h6>
                            <h6 class="text-danger ml-2">@string.Format("{0:#,###.##}", (product.Price - (product.Price * product.Discount * 0.01)))₫</h6>
                        }
                        else
                        {
                            <h6>@product.Price.GetValueOrDefault(0).ToString("N0")₫</h6>
                        }
                    </div>
                    <p class="text-muted mb-0">Đã bán: @product.Quantity</p>
                </div>
                <div class="card-footer d-flex justify-content-between bg-light border">
                    <a href="@Url.Action("DetailProduct", new { @Id = product.ProductId })" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                        <i class="fas fa-eye text-primary mr-1"></i>Chi tiết
                    </a>
                    <a href="/them-gio-hang?ProductId=@product.ProductId&quantity=1" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                        <i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Phân trang -->
    <div class="col-12 pb-1">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-3">
                @Html.PagedListPager(Model, page => Url.Action("Hots", new { page }), 
                    new PagedListRenderOptions {
                        LiElementClasses = new string[] { "page-item" },
                        LinkToFirstPageFormat = "««",
                        LinkToPreviousPageFormat = "«",
                        LinkToNextPageFormat = "»", 
                        LinkToLastPageFormat = "»»",
                        ContainerDivClasses = new string[] { "pagination" },
                        UlElementClasses = new string[] { "pagination justify-content-center" }
                    })
            </ul>
        </nav>
    </div>
</div>
      
