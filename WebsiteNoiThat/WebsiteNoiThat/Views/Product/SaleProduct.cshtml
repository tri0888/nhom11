@model List<Models.EF.Product>

@foreach (var product in Model)
{
    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="card product-item border-0 mb-4 h-100" onclick="window.location='@Url.Action("DetailProduct", new { @Id = product.ProductId })'" style="cursor: pointer;">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <img class="img-fluid w-100" src="@Url.Content("~/image/" + product.Photo)" alt="@product.Name" style="height: 280px; object-fit: cover;">
                <span class="badge badge-danger position-absolute" style="top: 10px; right: 10px;">-@product.Discount%</span>
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3 px-3">@product.Name</h6>
                <div class="d-flex justify-content-center">
                    <h6>@product.Price.GetValueOrDefault(0).ToString("N0")₫</h6>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light border mt-auto">
                <a href="@Url.Action("DetailProduct", new { @Id = product.ProductId })" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                    <i class="fas fa-eye text-primary mr-1"></i>Chi tiết
                </a>
                <a href="/them-gio-hang?productid=@product.ProductId&quantity=1" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                    <i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ
                </a>
            </div>
        </div>
    </div>
}