@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<Models.EF.Product>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Noidungmenu{    
    <div class="border-bottom mb-4 pb-4">
        <h5 class="font-weight-semi-bold mb-4">Kết quả lọc theo giá:</h5>
        @{
            string priceRangeText = "";
            if (Request.QueryString["priceRange"] == "0") { priceRangeText = "Dưới 5 Triệu"; }
            if (Request.QueryString["priceRange"] == "1") { priceRangeText = "5 Triệu - 10 Triệu"; }
            if (Request.QueryString["priceRange"] == "2") { priceRangeText = "10 Triệu - 20 Triệu"; }
            if (Request.QueryString["priceRange"] == "3") { priceRangeText = "20 Triệu - 50 Triệu"; }
            if (Request.QueryString["priceRange"] == "4") { priceRangeText = "Trên 50 Triệu"; }
        }
        <h6>@priceRangeText</h6>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row pb-3">
            @foreach (var sp in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4" onclick="window.location='@Url.Action("DetailProduct", new { @Id = sp.ProductId })'" style="cursor: pointer;">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="@Url.Content("~/image/" + sp.Photo)" alt="@sp.Name" style="height: 280px; object-fit: cover;">
                            @if (sp.Discount != 0 && sp.EndDate > DateTime.Now && sp.StartDate < DateTime.Now)
                            {
                                <span class="badge badge-danger position-absolute" style="top: 10px; right: 10px;">-@sp.Discount%</span>
                            }
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@sp.Name</h6>
                            <div class="d-flex justify-content-center">
                                @if (sp.Discount != 0 && sp.EndDate > DateTime.Now && sp.StartDate < DateTime.Now)
                                {
                                    <h6 class="text-muted ml-2"><del>@sp.Price.GetValueOrDefault(0).ToString("N0")₫</del></h6>
                                    <h6 class="text-danger ml-2">@((sp.Price - (sp.Price * sp.Discount * 0.01)).GetValueOrDefault(0).ToString("N0"))₫</h6>
                                    <p class="small text-muted">(@string.Format("{0:d}", sp.StartDate) - @string.Format("{0:d}", sp.EndDate))</p>
                                }
                                else
                                {
                                    <h6>@sp.Price.GetValueOrDefault(0).ToString("N0")₫</h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="@Url.Action("DetailProduct", new { @Id = sp.ProductId })" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                                <i class="fas fa-eye text-primary mr-1"></i>Chi tiết
                            </a>
                            <a href="/them-gio-hang?ProductId=@sp.ProductId&quantity=1" class="btn btn-sm text-dark p-0" onclick="event.stopPropagation();">
                                <i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-12 pb-1">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-3">
                    @Html.PagedListPager(Model, page => Url.Action("SearchFocus", new { 
                        page,
                        priceRange = Request.QueryString["priceRange"]
                    }))
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Không tìm thấy sản phẩm nào phù hợp với tiêu chí tìm kiếm
        </div>
    }
}
