@model Models.EF.Card
@{
    ViewBag.Title = "Đăng ký thẻ tích điểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h4 class="mb-0 text-center">ĐĂNG KÝ THẺ TÍCH ĐIỂM</h4>
                </div>
                <div class="card-body p-4">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home"></i> Trang chủ</a></li>
                            <li class="breadcrumb-item active">Đăng ký thẻ tích điểm</li>
                        </ol>
                    </nav>

                    <div class="mb-4">
                        <a href="/RegisterAndLogin/Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Bỏ qua đăng ký thẻ tích điểm
                        </a>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "list-unstyled mb-0" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.Success
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model == null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>Bạn đã có thẻ tích điểm hoặc chưa đăng nhập!
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else
                    {
                        using (Html.BeginForm("Card", "RegisterAndLogin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label class="form-label fw-bold">Mã khách hàng</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-id-card"></i></span>
                                    @Html.HiddenFor(m => m.UserId)
                                    <input type="text" class="form-control" value="@Model.UserId" readonly />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Điểm tích lũy</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-star"></i></span>
                                    <input type="text" class="form-control" value="0" readonly>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-credit-card me-2"></i>Đăng ký thẻ
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
    overflow: hidden;
}

.card-header {
    border-bottom: none;
}

.input-group-text {
    width: 45px;
    justify-content: center;
}

.form-control {
    padding: 0.75rem 1rem;
    font-size: 1rem;
}

.form-control:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 0.25rem rgba(255, 182, 193, 0.25);
}

.form-control[readonly] {
    background-color: #f8f9fa;
}

.btn-primary {
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.btn-outline-secondary:hover {
    background-color: #6c757d;
    border-color: #6c757d;
}

.alert {
    border: none;
    border-radius: 10px;
}
</style>
