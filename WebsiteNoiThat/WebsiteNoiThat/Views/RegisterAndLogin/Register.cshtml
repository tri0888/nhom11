@model WebsiteNoiThat.Models.RegisterModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item"><a href="/" class="text-primary"><i class="fas fa-home"></i></a></li>
                    <li class="breadcrumb-item active">ĐĂNG KÝ TÀI KHOẢN</li>
                </ol>
            </nav>

            @using (Html.BeginForm("Register", "RegisterAndLogin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "list-unstyled mb-0" })
                    </div>
                }

                if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle mr-2"></i>@ViewBag.Success
                    </div>
                }

                <div class="form-group row">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Nhập tên đăng nhập", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập họ tên", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Phone, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Address, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            </div>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", rows = "3", placeholder = "Nhập địa chỉ", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="form-group row mb-0">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus mr-2"></i>Đăng ký
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .input-group-text {
        background-color: #4e73df;
        color: white;
        border: 1px solid #4e73df;
        width: 40px;
        justify-content: center;
    }
    
    .form-control {
        border-radius: 0 4px 4px 0;
    }
    
    .form-control:focus {
        border-color: #bac8f3;
        box-shadow: 0 0 0 0.2rem rgba(78,115,223,.25);
    }
    
    .col-form-label {
        color: #5a5c69;
        font-weight: 500;
    }
    
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        padding: 8px 20px;
    }
    
    .btn-primary:hover {
        background-color: #2e59d9;
        border-color: #2e59d9;
    }
    
    .alert {
        border-radius: 4px;
    }
</style>