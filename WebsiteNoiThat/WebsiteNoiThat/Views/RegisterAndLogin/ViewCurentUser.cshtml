@model Models.EF.User

@{
    ViewBag.Title = "Xem thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin tài khoản</h4>
                </div>
                <div class="card-body p-4">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home"></i> Trang chủ</a></li>
                            <li class="breadcrumb-item active">Thông tin tài khoản</li>
                        </ol>
                    </nav>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" readonly value="@Model.Username">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Mật khẩu</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" readonly value="********">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-id-card"></i></span>
                                    <input type="text" class="form-control" readonly value="@Model.Name">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-envelope"></i></span>
                                    <input type="text" class="form-control" readonly value="@Model.Email">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Địa chỉ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-map-marker-alt"></i></span>
                                    <input type="text" class="form-control" readonly value="@Model.Address">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-phone"></i></span>
                                    <input type="text" class="form-control" readonly value="@Model.Phone">
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="statusSwitch" @(Model.Status ? "checked" : "") disabled>
                                <label class="form-check-label fw-bold" for="statusSwitch">Trạng thái kích hoạt</label>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <a href="/RegisterAndLogin/EditCurentUser" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Sửa thông tin
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .card-header {
        border-radius: 15px 15px 0 0;
    }
    
    .form-control {
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
    }
    
    .form-control:disabled, .form-control[readonly] {
        background-color: #f8f9fa;
        opacity: 0.9;
    }
    
    .input-group-text {
        border-radius: 0.5rem 0 0 0.5rem;
        width: 45px;
        justify-content: center;
    }
    
    .form-control {
        border-radius: 0 0.5rem 0.5rem 0;
    }
    
    .btn-warning {
        color: #fff;
        background-color: #ffc107;
        border-color: #ffc107;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-warning:hover {
        background-color: #ffca2c;
        border-color: #ffca2c;
        color: #fff;
        transform: translateY(-2px);
    }
    
    .form-check-input:checked {
        background-color: var(--primary);
        border-color: var(--primary);
    }
</style>
