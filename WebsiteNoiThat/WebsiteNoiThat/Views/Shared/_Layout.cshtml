<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Thời Trang Cao Cấp</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="~/Content/EShopper/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/EShopper/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/EShopper/css/style.css" rel="stylesheet">
    
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- PagedList CSS -->
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-xl-5">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark" href="">Hỗ trợ</a>
                    <span class="text-muted px-2">|</span>
                    <a class="text-dark" href="">Liên hệ</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center justify-content-end w-100">
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="/" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">T</span>HOITRANG</h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form action="/tim-kiem" method="get">
                    <div class="input-group">
                        <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm sản phẩm">
                        <div class="input-group-append">
                            <button type="submit" class="input-group-text bg-transparent text-primary border-0">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 col-6 text-right">
                <div class="d-inline-flex align-items-center">
                    @{ Html.RenderAction("ViewLogin", "RegisterAndLogin");}
                    <a href="/gio-hang" class="btn border ml-2">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge">@{ Html.RenderAction("HeaderCart", "Home");}</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" 
                   data-toggle="collapse" 
                   href="#navbar-vertical" 
                   style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h6 class="m-0">DANH MỤC</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "collapse show" : "collapse") navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" 
                     id="navbar-vertical">
                    <div class="navbar-nav w-100 overflow-hidden" style="height: auto; max-height: 250px">
                        @{ Html.RenderAction("Menu", "CategoryProduct");}
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">T</span>HOITRANG</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="/Home/Index" class="nav-item nav-link">Trang chủ</a>
                            <a href="/Product/ShowProduct" class="nav-item nav-link">Sản phẩm</a>
                            <a href="/Product/Hots" class="nav-item nav-link">Hot nhất</a>
                            <a href="/Product/Sales" class="nav-item nav-link">Khuyến mãi</a>
                            <a href="/Contact/Contacts" class="nav-item nav-link">Liên hệ</a>
                        </div>
                    </div>
                </nav>
                @RenderSection("Slider", required: false)
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    <!-- Page Content -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            @if (ViewContext.RouteData.Values["controller"].ToString() == "Product")
            {
                <div class="col-lg-3 col-md-12">
                    <div class="border-bottom mb-4 pb-4">
                        <h5 class="font-weight-semi-bold mb-4">Lọc Theo Giá</h5>
                        <form action="/Product/SearchFocus" method="get">
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="price-0" name="priceRange" value="0">
                                <label class="custom-control-label" for="price-0">Dưới 5 Triệu</label>
                            </div>
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="price-1" name="priceRange" value="1">
                                <label class="custom-control-label" for="price-1">5 Triệu - 10 Triệu</label>
                            </div>
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="price-2" name="priceRange" value="2">
                                <label class="custom-control-label" for="price-2">10 Triệu - 20 Triệu</label>
                            </div>
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="price-3" name="priceRange" value="3">
                                <label class="custom-control-label" for="price-3">20 Triệu - 50 Triệu</label>
                            </div>
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="price-4" name="priceRange" value="4">
                                <label class="custom-control-label" for="price-4">Trên 50 Triệu</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Lọc</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12">
                    @RenderSection("Noidungbenphai", required: false)
                    @RenderSection("Noidungmenu", required: false)
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-12">
                    @RenderSection("Noidungbenphai", required: false)
                    @RenderSection("Noidungmenu", required: false)
                    @RenderBody()
                </div>
            }
        </div>
    </div>
    <!-- Page Content End -->

    <!-- News Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">TIN TỨC NỔI BẬT</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            <div class="col-12">
                <div class="owl-carousel news-carousel">
                    @{ Html.RenderAction("NewsHot", "News"); }
                </div>
            </div>
        </div>
    </div>
    <!-- News End -->

    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a href="" class="text-decoration-none">
                    <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-3 mr-1">T</span>HOITRANG</h1>
                </a>
                <p>Studio Thời Trang - Đẹp - Sang Trọng - Tinh tế</p>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>123 Đường ABC, Quận XYZ, TP.HCM</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>info@thoitrang.vn</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>0968 012 687</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Về chúng tôi</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href=""><i class="fa fa-angle-right mr-2"></i>Giới thiệu</a>
                            <a class="text-dark mb-2" href=""><i class="fa fa-angle-right mr-2"></i>Chính sách & Quy định</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Hỗ trợ</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href=""><i class="fa fa-angle-right mr-2"></i>Chính sách vận chuyển</a>
                            <a class="text-dark mb-2" href=""><i class="fa fa-angle-right mr-2"></i>Chính sách thanh toán</a>
                            <a class="text-dark" href=""><i class="fa fa-angle-right mr-2"></i>Bản đồ</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Kết nối</h5>
                        <div class="d-flex">
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-primary btn-square" href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/EShopper/lib/easing/easing.min.js"></script>
    <script src="~/Content/EShopper/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/Content/EShopper/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/Content/EShopper/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/Content/EShopper/js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("jsFooter", required: false)
</body>

</html>