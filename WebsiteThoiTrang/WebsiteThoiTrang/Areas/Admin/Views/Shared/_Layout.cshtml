<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Trang quản trị</title>

    <!-- Volt CSS -->
    <link type="text/css" href="https://demo.themesberg.com/volt-pro/css/volt.css" rel="stylesheet">
    <link type="text/css" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link type="text/css" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" rel="stylesheet">
    <link type="text/css" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">

    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    @RenderSection("Styles", required: false)

    <style>
        /* Style cho nút toggle */
        #sidebarToggleTop {
            color: #333333;
        }
        #sidebarToggleTop:hover {
            color: #0d6efd;
        }
        
        .sidebar {
            width: 250px !important;
            transition: margin 0.3s ease-in-out, width 0.3s ease-in-out;
        }

        .sidebar.toggled {
            margin-left: -250px !important;
            width: 0 !important; 
        }

        .content {
            margin-left: 250px;
            transition: margin 0.3s ease-in-out;
        }

        body.sidebar-toggled .content {
            margin-left: 0;
        }

        @@media screen and (max-width: 768px) {
            .sidebar {
                margin-left: -250px;
            }
            
            .sidebar.show {
                margin-left: 0;
            }
            
            .content {
                margin-left: 0;
            }
            
            .navbar-toggler {
                display: block !important;
            }
        }
    </style>
</head>

<body>

    <!-- Page Wrapper -->
    <div class="wrapper">
        <!-- Navbar Mobile -->
        <nav class="navbar navbar-dark navbar-theme-primary px-4 col-12 d-lg-none">
            <a class="navbar-brand me-lg-5" href="~/Admin">
                <i class="fas fa-chart-pie me-2"></i>
                <span class="sidebar-brand-text">TRANG QUẢN LÝ</span>
            </a>
            <div class="d-flex align-items-center">
                <button class="navbar-toggler" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <!-- Sidebar -->
        <nav id="sidebarMenu" class="sidebar d-lg-block bg-gray-800 text-white collapse" data-simplebar>
            <div class="sidebar-inner px-4 pt-3">
                <div class="user-card d-flex d-md-none align-items-center justify-content-between justify-content-md-center pb-4">
                    
                    <div class="collapse-close d-md-none">
                        <a href="#sidebarMenu" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu"
                           aria-expanded="true" aria-label="Toggle navigation">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>

                <ul class="nav flex-column pt-3 pt-md-0">
                    <li class="nav-item">
                        <a href="~/Admin" class="nav-link d-flex align-items-center">
                            <i class="fas fa-home me-2"></i>
                            <span class="sidebar-text">TRANG QUẢN LÝ</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <span class="nav-link d-flex justify-content-between align-items-center">
                            <span class="sidebar-text text-uppercase fw-bold">Bán Hàng</span>
                        </span>
                    </li>

                    <li class="nav-item">
                        <span class="nav-link collapsed d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#submenu-app">
                            <span>
                                <i class="fas fa-box"></i>
                                <span class="sidebar-text">Sản phẩm</span>
                            </span>
                            <span class="link-arrow">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        </span>
                        <div class="multi-level collapse" role="list" id="submenu-app" aria-expanded="false">
                            <ul class="flex-column nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Product/Show">
                                        <span class="sidebar-text">Sản phẩm</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/ProductCate/Show">
                                        <span class="sidebar-text">Loại sản phẩm</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a href="/Admin/Provider/Show" class="nav-link">
                            <i class="fas fa-truck"></i>
                            <span class="sidebar-text">Nhà cung cấp</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/Admin/Orders/Show" class="nav-link">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="sidebar-text">Đơn đặt hàng</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/Admin/Report/Viewmodel" class="nav-link">
                            <i class="fas fa-chart-bar"></i>
                            <span class="sidebar-text">Thống kê - Báo cáo</span>
                        </a>
                    </li>

                    <li role="separator" class="dropdown-divider mt-4 mb-3 border-gray-700"></li>

                    <li class="nav-item">
                        <span class="nav-link d-flex justify-content-between align-items-center">
                            <span>
                                <span class="sidebar-text">NGƯỜI DÙNG</span>
                            </span>
                        </span>
                    </li>

                    <li class="nav-item">
                        <a href="/Admin/Customer/Show" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span class="sidebar-text">Khách hàng</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/Admin/User/Show" class="nav-link">
                            <i class="fas fa-user-tie"></i>
                            <span class="sidebar-text">Nhân viên</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <span class="nav-link collapsed d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#submenu-pages">
                            <span>
                                <i class="fas fa-user-shield"></i>
                                <span class="sidebar-text">Phân quyền</span>
                            </span>
                            <span class="link-arrow">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        </span>
                        <div class="multi-level collapse" role="list" id="submenu-pages" aria-expanded="false">
                            <ul class="flex-column nav">                                
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Roles/Index">
                                        <span class="sidebar-text">Vai trò</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Credentials/Index">
                                        <span class="sidebar-text">Quyền hạn</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item mt-3">
                        <span class="nav-link d-flex justify-content-between align-items-center">
                            <span class="sidebar-text text-uppercase fw-bold">Nội Dung Website</span>
                        </span>
                    </li>

                    <li class="nav-item">
                        <span class="nav-link collapsed d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#submenu-content">
                            <span>
                                <i class="fas fa-globe"></i>
                                <span class="sidebar-text">Quản lý nội dung</span>
                            </span>
                            <span class="link-arrow"><i class="fas fa-chevron-right"></i></span>
                        </span>
                        <div class="multi-level collapse" role="list" id="submenu-content">
                            <ul class="flex-column nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/News/Show">
                                        <i class="fas fa-newspaper"></i>
                                        <span class="sidebar-text">Tin tức</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Contact/Index">
                                        <i class="fas fa-envelope"></i>
                                        <span class="sidebar-text">Liên hệ</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="content">
            <nav class="navbar navbar-top navbar-expand navbar-dashboard navbar-dark ps-0 pe-2 pb-0">
                <div class="container-fluid px-0">
                    <div class="d-flex justify-content-between w-100" id="navbarSupportedContent">
                        <div class="d-flex align-items-center">
                            <!-- Sidebar Toggle (Topbar) -->
                            <button id="sidebarToggleTop" class="btn btn-link rounded-circle me-3 d-none d-md-flex">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                        <!-- Navbar links -->
                        <ul class="navbar-nav align-items-center">                            

                            <li class="nav-item dropdown ms-lg-3">
                                <a class="nav-link dropdown-toggle pt-1 px-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="media d-flex align-items-center">
                                        <img class="avatar rounded-circle" src="https://source.unsplash.com/6W4F62sN_yI/60x60">
                                        <div class="media-body ms-2 text-dark align-items-center d-none d-lg-block">
                                            <span class="mb-0 font-small fw-bold text-gray-900">@ViewBag.username</span>
                                        </div>
                                    </div>
                                </a>
                                <div class="dropdown-menu dashboard-dropdown dropdown-menu-end mt-2 py-1">
                                    <a class="dropdown-item d-flex align-items-center" href="~/Admin/User/UserProfile">
                                        <i class="fas fa-user-circle"></i>
                                        <span class="ms-2">Thông tin</span>
                                    </a>
                                    <div role="separator" class="dropdown-divider my-1"></div>
                                    <a class="dropdown-item d-flex align-items-center" href="~/Admin/Login/Logout">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span class="ms-2">Đăng xuất</span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="py-4">
                @RenderBody()
            </div>

        </main>
    </div>  

    <!-- Core -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Vendor JS -->
    <script src="https://cdn.jsdelivr.net/npm/onscreen@1.5.0/dist/on-screen.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/smooth-scroll@16.1.3/dist/smooth-scroll.polyfills.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <!-- Volt JS -->
    <script src="https://demo.themesberg.com/volt-pro/assets/js/volt.js"></script>

    <!-- jQuery và DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        // Toggle the side navigation
        $("#sidebarToggleTop").on('click', function(e) {
            e.preventDefault();
            $("body").toggleClass("sidebar-toggled");
            $(".sidebar").toggleClass("toggled");
        });

        // Mobile view
        $('.navbar-toggler').on('click', function() {
            $('.sidebar').toggleClass('show');
        });

        // Close sidebar when clicking outside on mobile
        $(document).on('click', function(e) {
            if ($(window).width() <= 768) {
                if (!$(e.target).closest('.sidebar').length && 
                    !$(e.target).closest('.navbar-toggler').length) {
                    $('.sidebar').removeClass('show');
                }
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>