@model WebsiteNoiThat.Models.UserEditModel

@{
    ViewBag.Title = "Cập nhật thông tin";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i>Cập nhật thông tin tài khoản</h4>
                </div>
                <div class="card-body p-4">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home"></i> Trang chủ</a></li>
                            <li class="breadcrumb-item active">Cập nhật thông tin</li>
                        </ol>
                    </nav>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.Username)
                        @Html.HiddenFor(m => m.GroupId)
                        @Html.HiddenFor(m => m.Status)

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-user"></i></span>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-envelope"></i></span>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">Số điện thoại</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-phone"></i></span>
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">Địa chỉ</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-map-marker-alt"></i></span>
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "form-label fw-bold" })
                                    <small class="text-muted">(để trống nếu không muốn thay đổi)</small>
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-lock"></i></span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white"><i class="fas fa-lock"></i></span>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Cập nhật
                            </button>
                            <a href="/RegisterAndLogin/ViewCurentUser" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>