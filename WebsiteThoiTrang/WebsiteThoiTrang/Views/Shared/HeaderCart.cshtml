@model List<WebsiteNoiThat.Models.CartItem>

<span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">@Model.Count</span>

<div class="dropdown-menu cart-dropdown">
    <div class="cart-header">
        <h6 class="font-weight-semi-bold m-0">Giỏ hàng của bạn</h6>
    </div>
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="cart-item">
                <div class="d-flex align-items-center p-2">
                    <img src="@Url.Content("~/image/" + item.Product.Photo)" alt="@item.Product.Name" style="width: 50px;">
                    <div class="ml-2">
                        <div class="text-truncate">@item.Product.Name</div>
                        <div class="small text-muted">@item.Quantity x @item.Product.Price.GetValueOrDefault(0).ToString("N0")₫</div>
                    </div>
                </div>
            </div>
        }
        <div class="cart-footer text-center p-2">
            <a href="/gio-hang" class="btn btn-primary btn-block">Xem giỏ hàng</a>
        </div>
    }
    else
    {
        <div class="text-center p-3">
            <p class="mb-0">Giỏ hàng trống</p>
        </div>
    }
</div>
